{
  "name": "book-catalog-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nodemon",
    "start:dev": "npx cross-env NODE_ENV=dev ts-node ./src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=prod nest start",
    "migration:run": "npx cross-env NODE_ENV=dev typeorm-ts-node-esm migration:run -d \"./src/utils/migrations/postgres.data-source.ts\"",
    "migration:revert": "npx cross-env NODE_ENV=dev typeorm-ts-node-esm migration:revert -d \"./src/utils/migrations/postgres.data-source.ts\"",
    "migration:generate": "npx cross-env NODE_ENV=dev typeorm-ts-node-esm migration:generate -d \"./src/utils/migrations/postgres.data-source.ts\" --pretty src/migration/$NAME",
    "migration:create": "npx cross-env NODE_ENV=dev typeorm-ts-node-esm migration:create src/migration/$NAME",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/platform-express": "^9.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/testing": "^9.4.0",
    "@nestjs/typeorm": "^9.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/ftp": "^0.3.33",
    "@types/jest": "^29.5.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/node-fetch": "^2.6.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ftp": "^0.3.10",
    "jest": "^29.5.0",
    "node-fetch": "^3.3.1",
    "nodemon": "^2.0.22",
    "pg": "^8.10.0",
    "prettier": "^2.8.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.15",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
